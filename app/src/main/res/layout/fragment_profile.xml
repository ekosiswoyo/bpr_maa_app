<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	android:background="@color/white"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/white"
		android:id="@+id/mainLinearLayout1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:orientation="horizontal"
			android:layout_margin="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="match_parent"
				android:gravity="center"
				android:layout_margin="2dp">

				<android.support.v7.widget.CardView
					android:paddingTop="4dp"
					android:layout_marginTop="4dp"
					android:layout_marginBottom="4dp"
					android:layout_width="90dp"
					android:layout_height="90dp"
					android:layout_marginLeft="2dp"
					android:layout_marginRight="2dp"
					app:cardCornerRadius="45dp"
					app:cardPreventCornerOverlap="false"
					android:elevation="6dp">

					<ImageView
						android:id="@+id/img_foto"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center"
						android:scaleType="centerCrop"
						android:src="@drawable/avatar"/>
				</android.support.v7.widget.CardView>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <TextView
					android:id="@+id/tv_username_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
					android:layout_margin="5dp"
                    android:text="Tisto Wahyudi"
                    android:textSize="18dp"
                    android:textColor="#000000"/>

				<android.support.v7.widget.CardView
					android:id="@+id/btn_setting_profile"
					android:layout_width="match_parent"
					android:layout_margin="5dp"
					android:layout_height="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_settings_black_24dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Atur Akun"/>

                    </LinearLayout>

				</android.support.v7.widget.CardView>

			</LinearLayout>

		</LinearLayout>

        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/view_shadow" />
		<View
			android:layout_width="match_parent"
			android:layout_height="6dp"
			android:background="@drawable/view_shadow_refers" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
			android:background="@color/white"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Diri"
                android:textColor="#414141"
				android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info ini hanya bisa dilihai oleh Anda"
                android:textColor="#8b8b8b"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nomor Ponsel"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_noTlp_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#414141"
                android:text="081553188912"
				android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_shadow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_email_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#414141"
				android:textSize="15dp"
                android:text="email@gmail.com" />

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:background="@drawable/view_shadow" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:text="Jenis kelamin"
				android:textSize="13dp" />

			<TextView
				android:id="@+id/tv_jenis_kelamin_profil"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:textColor="#414141"
				android:textSize="15dp"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:background="@drawable/view_shadow" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:text="Tanggal Lahir"
				android:textSize="13dp" />

			<TextView
				android:id="@+id/tv_tgl_lahir_profil"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:textColor="#414141"
				android:text="17 July 1996"
				android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/view_shadow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Alamat"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_alamat_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#414141"
                android:text="Alamat"
				android:textSize="15dp"/>


			<android.support.v7.widget.CardView
				android:id="@+id/btn_logout_profile"
				android:layout_width="100dp"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="10dp"
				android:layout_height="30dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_gravity="center"
					android:gravity="center">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginRight="5dp"
						android:src="@drawable/ic_logout"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:text="Logout"/>

				</LinearLayout>
			</android.support.v7.widget.CardView>

        </LinearLayout>
	</LinearLayout>

</android.support.v4.widget.NestedScrollView>

