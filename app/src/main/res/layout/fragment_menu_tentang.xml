<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MenuTentangFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:background="@drawable/background_bpr"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:paddingTop="30dp"
          android:textColor="@color/kuning"
          android:textStyle="bold"
          android:textSize="25dp"
          android:paddingBottom="20dp"
          android:text="TENTANG KAMI"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="140dp"
          android:gravity="center"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp">

          <ImageView
              android:id="@+id/btn_sejarah"
              android:layout_width="100dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:src="@drawable/ic_sejarah"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:textColor="@color/kuning"
              android:textStyle="bold"
              android:textSize="20dp"
              android:text="Sejarah"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

          <ImageView
              android:id="@+id/btn_visi"
              android:layout_width="100dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:src="@drawable/ic_visi"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:textColor="@color/kuning"
              android:textStyle="bold"
              android:textSize="20dp"
              android:text="@string/visi"/>

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="140dp"
          android:gravity="center"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp">

          <ImageView
              android:id="@+id/btn_lokasi"
              android:layout_width="100dp"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:layout_weight="1"
              android:src="@drawable/ic_lokasi"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:textColor="@color/kuning"
              android:textStyle="bold"
              android:textSize="20dp"
              android:text="Lokasi"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

        </LinearLayout>
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</FrameLayout>